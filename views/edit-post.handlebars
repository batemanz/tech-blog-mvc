<div class='card'>
  <h2 class='card-header'>Edit Post</h2>
  <form class='card-body' id='editPostForm'>
    <div>
      <label class='form-label'>Title:</label>
      <input
        class='form-input'
        type='text'
        name='postTitle'
        value='{{post.postTitle}}'
      />
    </div>
{{!-- 

 --}}
    <div>
      <label class='form-label'>Content:</label>
      <textarea
        class='form-textarea form-input'
        name='postBody'
        data-number='8'
      >{{post.postContent}}</textarea>
    </div>
{{!-- 

 --}}
    <button class='btn btn-primary' type='submit'>Edit</button>
    <input type='hidden' name='postId' value='{{post.id}}' />
  </form>
  <div class='card-body'>
    <button class='btn btn-primary' type='click' id='deleteBtn'>Delete</button>
  </div>
</div>
<script src='/js/edit.js'></script>